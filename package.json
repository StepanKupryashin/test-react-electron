{
  "description": "Test app",
  "author": "Kupryashin",
  "build": {
    "appId": "<com.test-electron-app>"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "name": "my-electron-app",
  "version": "0.1.0",
